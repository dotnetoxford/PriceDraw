<Window x:Class="PrizeDraw.MeetupDotComSync"
        x:Name="MeetupDotComSyncWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vms="clr-namespace:PrizeDraw.ViewModels"
        d:DataContext="{d:DesignInstance vms:MeetupDotComSyncViewModel, IsDesignTimeCreatable=True}"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Title="Sync with Meetup.com" Height="300" Width="300">
    <Grid>
        <Button Command="{Binding SyncCommand}" CommandParameter="{Binding ElementName=MeetupDotComSyncWindow}" Width="300" Height="300" Content="{Binding ButtonText}"></Button>
    </Grid>
</Window>
