<Window x:Class="PrizeDraw.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" WindowStyle="None" WindowState="Maximized">

    <Grid Name="TileGrid">
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
        </Grid.Resources>

        <Rectangle
            Name="SelectionTile"
            Fill="White"
            Stroke="Black"
            StrokeThickness="5"
            Visibility="{Binding EnableSelectionTile, Converter={StaticResource BoolToVisConverter}}"
            Grid.Row="{Binding SelectionTileRowIndex}"
            Grid.Column="{Binding SelectionTileColumnIndex}"/>
    </Grid>
</Window>
